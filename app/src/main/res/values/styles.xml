<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Define custom style for the action bar (Toolbar) -->
    <style name="MyActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <!-- Customize action bar background -->
        <item name="android:background">#E0E0E0</item> <!-- Adjust the color code as needed -->

        <!-- Customize action bar title text appearance -->
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- Define custom style for action bar title text -->
    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <!-- Customize action bar title text appearance -->
        <item name="android:textColor">#FFFFFF</item> <!-- Adjust the text color as needed -->
        <item name="android:textSize">20sp</item> <!-- Adjust the text size as needed -->
    </style>
</resources>